<p id="notice"><%= notice %></p>

<%= link_to 'Book now', new_booking_path(room_id: @room.id), class: 'button' %>

<p>
  <strong>Price:</strong>
  <%= number_to_currency(@room.price) %> per night
</p>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<p>
  <strong>Title:</strong>
  <%= @room.title %>
</p>

<p>
  <strong>User:</strong>
  <%= @room.user.email %>
</p>

<p>
  <strong>Capacity:</strong>
  <%= @room.capacity %>
</p>

<p>
  <strong>Pets:</strong>
  <%= yes_no(@room.pets) %>
</p>

<p>
  <strong>Smoking:</strong>
  <%= yes_no(@room.smoking) %>
</p>

<p>
  <strong>Wifi:</strong>
  <%= yes_no(@room.wifi) %>
</p>

<p>
  <strong>Bathrooms:</strong>
  <%= @room.bathrooms %>
</p>

<p>
  <strong>Bath:</strong>
  <%= yes_no(@room.bath) %>
</p>

<p>
  <strong>Share:</strong>
  <%= yes_no(@room.share) %>
</p>

<p>
  <strong>Parties:</strong>
  <%= yes_no(@room.parties) %>
</p>

<p><<% @room.pictures.each do |picture| %>
    <%= image_tag(picture.url) %>
    <% end %></p>

<%= link_to 'Edit', edit_room_path(@room) %> |
<%= link_to 'Back', rooms_path %>
